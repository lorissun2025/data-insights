#!/bin/bash
# Docker容器启动脚本

cd /app/backend

echo "=========================================="
echo "智能数据平台 - Docker容器启动"
echo "=========================================="

# 启动主服务 (端口8000)
echo "启动主服务 (端口8000)..."
python app.py &

# 启动供应链服务 (端口8001)
echo "启动供应链服务 (端口8001)..."
python supply_chain.py &

# 启动医疗效能服务 (端口8002)
echo "启动医疗效能服务 (端口8002)..."
python medical_performance.py &

# 启动高级预测服务 (端口8003)
echo "启动高级预测服务 (端口8003)..."
python advanced_forecast.py &

# 启动数据导出服务 (端口8004)
echo "启动数据导出服务 (端口8004)..."
python export_api.py &

echo "=========================================="
echo "✅ 所有服务启动成功!"
echo "=========================================="

# 保持容器运行
wait
